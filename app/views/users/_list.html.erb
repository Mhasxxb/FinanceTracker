<div class="search-area">
    <h3 class="text-center">Search friends</h3>
    <%= form_tag search_friend_path, remote: true, method: :get do %>
        <div class="form-group row no-right-padding">
            <div class="col-sm-1"></div>
            <div class="col-sm-9">
                <%= text_field_tag :friend, params[:friend], placeholder: "Search...", autofocus: true, class: "form-control form-control-lg" %>
            </div>

            <div class="col-sm-2 no-left-padding">
                <%= button_tag "Search", type: :submit, class:"btn btn-success" do%>
                    <%= fa_icon "search 2x" %>
                <%end%>
            </div>
        </div>
    <% end %>
</div>
<div id="friend-results"></div>
<table class="table table-hover text-center" style="margin-top: 1rem;">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% obj.each do |friend| %>
            <tr>
                <th scope="row">
                    <%= friend.fullname %>
                </th>
                <td>
                    <%= friend.email %>
                </td>
                <td>
                    <%= button_to "Remove", friendship_path(friend), data:{ confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"  %>
                </td>
            </tr>
        <%end%>
    </tbody>
</table>
