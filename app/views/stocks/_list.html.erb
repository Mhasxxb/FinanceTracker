<table class="table table-hover text-center" style="margin-top: 1rem;">
    <thead>
        <tr>
            <th scope="col">Ticker</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% obj.each do |stock| %>
            <tr>
                <th scope="row">
                    <%= stock.ticker %>
                </th>
                <td>
                    <%= stock.name %>
                </td>
                <td>
                    <%= stock.last_price %>
                </td>
                <% if user.id == current_user.id %>
                    <td>
                        <%= button_to "Remove",user_stock_path(stock), class:"btn btn-danger", method: :delete, data:{confirm: "Do you want to remove #{stock.name} from your portfolio?"} %>
                    </td>
                <%else%>
                    <% if current_user.stocks.where(stock_id: stock.id) %>
                        <td class="badge badge-secondary">tracking...</td>
                    <%else%>
                        <td>
                            <%= button_to "Add",user_stock_path(stock), class:"btn btn-success", method: :delete, data:{confirm: "Do you want to remove #{stock.name} from your portfolio?"} %>
                        </td>
                    <%end%>
                <%end%>

            </tr>
        <%end%>
    </tbody>
</table>